<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <GridLayout
        android:id="@+id/GridView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="false" >

        <ImageView
            android:id="@+id/blueDotIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_column="1"
            android:layout_row="1"
            android:contentDescription="blue" />

        <TextView
            android:id="@+id/blueDotTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_column="2"
            android:layout_row="1"
            android:text="@+id/TextView01"
            android:textAppearance="?android:attr/textAppearanceLarge"  />

        <ImageView
            android:id="@+id/greenDotIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_column="1"
            android:layout_row="2" />

        <TextView
            android:id="@+id/greenDotTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_column="2"
            android:layout_row="2"
            android:text="@+id/TextView01"
            android:textAppearance="?android:attr/textAppearanceLarge"  />

        <ImageView
            android:id="@+id/yellowDotIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_column="1"
            android:layout_row="3" />

        <TextView
            android:id="@+id/yellowDotTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_column="2"
            android:layout_row="3"
            android:text="@+id/TextView01"
            android:textAppearance="?android:attr/textAppearanceLarge"  />

        <ImageView
            android:id="@+id/orangeDotIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_column="1"
            android:layout_row="4" />

        <TextView
            android:id="@+id/orangeDotTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_margin="3dp"
            android:layout_row="4"
            android:text="@+id/TextView01"
            android:textAppearance="?android:attr/textAppearanceLarge"  />

        <ImageView
            android:id="@+id/redDotIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                        android:layout_margin="3dp"
            android:layout_column="1"
            android:layout_row="5" />

        <TextView
            android:id="@+id/redDotTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_column="2"
            android:layout_row="5"
            android:text="@+id/TextView01"
            android:textAppearance="?android:attr/textAppearanceLarge"  />
    </GridLayout>

    <Button
        android:id="@+id/Button01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/GridView"
        android:layout_centerHorizontal="true"
        android:text="OK" />

</RelativeLayout>